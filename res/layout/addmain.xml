<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddMain" >

    <Button
        android:id="@+id/combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:text="Add Combo"
        android:textSize="50sp" />

    <Button
        android:id="@+id/burger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/combo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add Burger"
        android:textSize="50sp" />

    <Button
        android:id="@+id/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/burger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add Side"
        android:textSize="50sp" />

    <Button
        android:id="@+id/drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/side"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add Drink"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/linear1"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drink"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancelm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="30sp" />

        <Button
            android:id="@+id/reviewm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Review"
            android:textSize="30sp" />

        <Button
            android:id="@+id/confirmm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/drink"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>
